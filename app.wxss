/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-69%);
} 
.rect {
  width: 100%;
  height: 400rpx;
  text-align: center;
  line-height: 400rpx;
  color: #04cc87;
  overflow:hidden;
  position:relative;
}
.rect .bg {
  width: 100%;
}
.place-title {
  display: block;
  width:100%;
  color:#bbbbbb;
  font-size:50rpx;
  text-align: center;
  margin-top: 40rpx;
}
.condition {
  display: block;
  font-size: 24rpx;
}
.rect .swipe-area {
  height: 400rpx;
  line-height: 10rpx;
}
.rect .slide-image{
  width: 100%;
}
.conditionAll {
  padding:50rpx 100rpx;
}
.initiated {
  width: 88%;
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #04cc87;
  color: #ffffff;
}